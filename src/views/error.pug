extends layout

block content
  section.mx-section.pt-0
    .row.justify-content-center
      .col-lg-8.col-xl-6
        .mx-card.p-5.text-center.shadow-hover
          .mb-4
            i.fas.fa-triangle-exclamation.fa-4x.text-warning
          h1.h3.fw-semibold.mb-3 Something went off-script
          p.lead.text-muted.mb-4 We hit an unexpected snag while loading this page. Our engineers are already on it.
          if error && error.status
            span.badge.mx-pill.mx-pill-soft.fs-6.px-3.py-2.mb-4 Error code: #{error.status}
          .d-flex.flex-wrap.justify-content-center.gap-3
            a.btn.btn-accent.btn-lg.px-4.rounded-pill(href='/')
              i.fas.fa-house.me-2
              | Back to home
            a.btn.btn-outline-accent.btn-lg.px-4.rounded-pill(href='javascript:history.back()')
              i.fas.fa-arrow-left.me-2
              | Previous page
            a.btn.btn-outline-light.btn-lg.px-4.rounded-pill(href='/about')
              i.fas.fa-circle-info.me-2
              | About MoviezExpress
          button.btn.btn-outline-light.btn-sm.rounded-pill.mt-4(type='button' data-bs-toggle='collapse' data-bs-target='#developer-info' aria-expanded='false' aria-controls='developer-info')
            i.fas.fa-code.me-2
            | Developer diagnostics

          .collapse.mt-4#developer-info
            .mx-card.bg-dark.bg-opacity-50.border-0
              .p-4.text-start
                if error
                  .mb-3
                    h6.text-uppercase.text-muted.fw-semibold.mb-2 Summary
                    p.text-muted.mb-0 #{error.message || 'No message available'}
                  if error.status
                    .mb-3
                      h6.text-uppercase.text-muted.fw-semibold.mb-2 Status code
                      code.text-break #{error.status}
                  if error.stack
                    h6.text-uppercase.text-muted.fw-semibold.mb-2 Stack trace
                    pre.bg-black.text-light.p-3.rounded.small #{error.stack}
                else
                  p.text-muted.mb-0 No additional diagnostic data is available.

  section.mx-section.pt-0
    .row.justify-content-center
      .col-lg-8.col-xl-6
        .mx-card.p-4
          h5.fw-semibold.mb-4
            i.fas.fa-life-ring.me-2.text-info
            | How to get back on track
          .row.g-4
            .col-md-6
              h6.fw-semibold
                i.fas.fa-rotate.me-2.text-warning
                | Refresh the page
              p.text-muted.small Try a quick reload or revisit the previous screen.
            .col-md-6
              h6.fw-semibold
                i.fas.fa-envelope.me-2.text-danger
                | Contact support
              p.text-muted.small Persistent issue? Reach out to our support crew anytime.
            .col-md-6
              h6.fw-semibold
                i.fas.fa-tower-broadcast.me-2.text-success
                | Status dashboard
              p.text-muted.small Review live system health updates and maintenance notices.
            .col-md-6
              h6.fw-semibold
                i.fas.fa-book-open.me-2.text-info
                | Help center
              p.text-muted.small Explore guides covering rentals, billing, and account management.
