extends ../layout        

block content
  form(method="post", action=`/users/${user.customer_id}/edit`)
    .mb-3
      label(for="email", class="form-label") Edit Customer
      input(type="text", name="first_name" value=user.first_name, class="form-control", id="first_name", aria-describedby="first_nameHelp")
      input(type="text", name="last_name" value=user.last_name, class="form-control", id="last_name", aria-describedby="last_nameHelp")
      input(type="email", name="email", class="form-control", id="email", aria-describedby="emailHelp", value=user.email)
    button(type="submit", class="btn btn-primary") Submit
    a(class="btn btn-secondary", href=`/users/${user.customer_id}/details`) Back to user details  