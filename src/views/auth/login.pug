extends ../layout

block content
  section.mx-section.pt-0
    .row.justify-content-center
      .col-md-8.col-lg-5.col-xl-4
        .mx-card.p-5.shadow-hover
          h1.h4.fw-semibold.mb-4.text-center
            i.fas.fa-right-to-bracket.me-2.text-danger
            | Sign in to MoviezExpressRentals
          if error && error.length > 0
            .alert.alert-danger.alert-dismissible.fade.show(role='alert')
              = error
              button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')
          if success && success.length > 0
            .alert.alert-success.alert-dismissible.fade.show(role='alert')
              = success
              button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')
          form.needs-validation(action='/auth/login' method='POST' novalidate)
            .mb-3
              label.form-label.fw-semibold(for='username')
                i.fas.fa-user.me-2
                | Username
              input.form-control.form-control-lg(type='text' id='username' name='username' placeholder='Enter your username' required autocomplete='username')
              .invalid-feedback Please provide your username.
            .mb-3
              label.form-label.fw-semibold(for='password')
                i.fas.fa-lock.me-2
                | Password
              input.form-control.form-control-lg(type='password' id='password' name='password' placeholder='Enter your password' required autocomplete='current-password')
              .invalid-feedback Password is required.
            .d-flex.justify-content-between.align-items-center.mb-4
              .form-check
                input.form-check-input(type='checkbox' id='rememberMe' name='rememberMe')
                label.form-check-label(for='rememberMe')
                  i.fas.fa-clock.me-2
                  | Remember me for 30 days
              a.small.text-muted(href='/auth/register')
                i.fas.fa-user-plus.me-1
                | Create account
            button.btn.btn-accent.btn-lg.w-100.rounded-pill(type='submit')
              i.fas.fa-arrow-right-to-bracket.me-2
              | Sign in
        .text-center.mt-4
          .mx-card.p-4.bg-dark.bg-opacity-50.border-0
            h2.h6.text-uppercase.text-muted.mb-3 Demo credentials
            p.text-muted.small.mb-2
              | Admin: 
              strong admin
              |  / admin123
            p.text-muted.small.mb-2
              | Customer: 
              strong eter
              |  / chipss
            p.text-muted.small.mb-0
              | Staff: 
              strong pietjepuk
              |  / pietjepuk

  script.
    (function () {
      'use strict';
      const forms = document.querySelectorAll('.needs-validation');
      Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    })();
